<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <% if (typeof accountData !== 'undefined' && accountData) { %>
      <a href="/account/" title="Account Management">
        Welcome <%= accountData.account_firstname %>
      </a>
      <a href="/account/logout" title="Logout">Logout</a>
    <% } else { %>
      <a class="logIn" title="Click to log in" href="/account/login">My Account</a>
    <% } %>
  </div>
</header>
