<h1><%= title %></h1>

<% if (message) { %><p><%= message %></p><% } %>
<% if (errors && errors.length > 0) { %>
  <ul>
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<!-- Account Update Form -->
<form action="/account/update" method="post">
  <label for="firstname">First Name:</label>
<input type="text" name="account_firstname" value="<%= typeof account_firstname !== 'undefined' ? account_firstname : '' %>" required>

  <label for="lastname">Last Name:</label>
  <input type="text" name="account_lastname" value="<%= typeof account_lastname !== 'undefined' ? account_lastname : '' %>" required>

  <label for="email">Email:</label>
 <input type="email" name="account_email" value="<%= typeof account_email !== 'undefined' ? account_email : '' %>" required>

  <input type="hidden" name="account_id" value="<%= account_id %>">
  <input type="submit" value="Update Account">
</form>

<!-- Password Change Form -->
<form action="/account/update-password" method="post">
  <label for="password">New Password:</label>
  <input type="password" name="account_password" required>
  <p>Password must be at least 12 characters and contain a number, uppercase letter, and special character.</p>

  <input type="hidden" name="account_id" value="<%= account_id %>">
  <input type="submit" value="Change Password">
</form>
